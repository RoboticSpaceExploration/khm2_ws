<?xml version="1.0" encoding="utf-8"?>
<robot name="khm2" xmlns:xacro="http://www.ros.org/wiki/xacro">
<xacro:include filename="$(find khm2_description)/urdf/macro.xacro"/>

<link name="FL_wheel_link">
  <visual>
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <geometry>
      <mesh filename="package://khm2_description/models/wheel.dae"/>
    </geometry>
  </visual>
  <collision>
    <geometry>
      <mesh filename="package://khm2_description/models/wheel.dae"/>
    </geometry>
  </collision>
  <inertial>
    <mass value="0.45"/>
    <origin xyz="0 0 0"/>
    <inertia
	    ixx="0.003" ixy="0" ixz="0"
	    iyy="0.003" iyz="0" izz="0.003"/>
  </inertial>
</link>


