<?xml version="1.0" encoding="utf-8"?>
<robot name="khm2" xmlns:xacro="http://www.ros.org/wiki/xacro">
<xacro:include filename="$(find khm2_description)/urdf/macro.xacro"/>

<link name="FL_wheel_link">
  <visual>
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <geometry>
      <mesh filename="package://khm2_description/models/wheel.stl"/>
    </geometry>
  </visual>
  <collision>
    <geometry>
      <mesh filename="package://khm2_description/models/wheel_col.dae"/>
    </geometry>
  </collision>
  <inertial>
    <mass value="0.06925"/>
    <origin xyz="0 0 0"/>
    <xacro:cylinder_inertia m="0.06925" r="0.112" h="0.127"/> 

  </inertial>
</link>


<link name="FR_wheel_link">
  <visual>	
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <geometry>
      <mesh filename="package://khm2_description/models/wheel.stl"/>
    </geometry>
  </visual>
  <collision>
    <geometry>
      <mesh filename="package://khm2_description/models/wheel_col.dae"/>
    </geometry>
  </collision>
  <inertial>
    <mass value="0.06925"/>
    <origin xyz="0 0 0"/>
    <xacro:cylinder_inertia m="0.06925" r="0.112" h="0.127"/> 

  </inertial>

</link>


<link name="BL_wheel_link">
  <visual>
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <geometry>
      <mesh filename="package://khm2_description/models/wheel.stl"/>
    </geometry>
  </visual>
  <collision>
    <geometry>
      <mesh filename="package://khm2_description/models/wheel_col.dae"/>
    </geometry>
  </collision>
  <inertial>
    <mass value="0.06925"/>
    <origin xyz="0 0 0"/>
    <xacro:cylinder_inertia m="0.06925" r="0.112" h="0.127"/> 

  </inertial>

</link>


<link name="BR_wheel_link">
  <visual>
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <geometry>
      <mesh filename="package://khm2_description/models/wheel.stl"/>
    </geometry>
  </visual>
  <collision>
    <geometry>
      <mesh filename="package://khm2_description/models/wheel_col.dae"/>
    </geometry>
  </collision>
  <inertial>
    <mass value="0.06925"/>
    <origin xyz="0 0 0"/>
    <xacro:cylinder_inertia m="0.06925" r="0.112" h="0.127"/> 
  </inertial>
</link>

<link name="base_link">
  <visual>
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <geometry>
      <mesh filename="package://khm2_description/models/chassis.dae"/>
    </geometry>
  </visual>
  <collision>
    <geometry>
      <box size="0.333 0.16125 0.15428"></box>
    </geometry>
  </collision>
  <inertial>
      <mass value="2.0"/>
      <xacro:box_inertia m="2.0" x="0.333" y="0.16125" z="0.15428"/>        
  </inertial>
</link>

<joint name="FL_TO_BASELINK" type="continuous">
	<hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
	<origin xyz="-0.145 0.145225 -0.1" rpy="0 0 0"/>
	<child link="FL_wheel_link"/>
	<parent link="base_link"/>
</joint>


<joint name="FR_TO_BASELINK" type="continuous">
	<hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
	<origin xyz="0.145 0.145225 -0.1" rpy="0 0 0"/>
	<child link="FR_wheel_link"/>
	<parent link="base_link"/>
</joint>


<joint name="BL_TO_BASELINK" type="continuous">
	<hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
	<origin xyz="-0.145 -0.145225 -0.1" rpy="0 0 0"/>
	<child link="BL_wheel_link"/>
	<parent link="base_link"/>
</joint>


<joint name="BR_TO_BASELINK" type="continuous">
	<hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
	<origin xyz="0.145 -0.145225 -0.1" rpy="0 0 0"/>
	<origin xyz="-0.145 -0.145225 -0.1" rpy="0 0 0"/>
	<child link="BR_wheel_link"/>
	<parent link="base_link"/>
</joint>

<!-- Enable the Joint Feedback -->
<gazebo reference="FL_TO_BASELINK">
  <provideFeedback>true</provideFeedback>
  <sensor name="FL_force_torque" type="force_torque">
    <update_rate>1000</update_rate>
  </sensor>
</gazebo>
<gazebo reference="FR_TO_BASELINK">
  <provideFeedback>true</provideFeedback>
  <sensor name="FR_force_torque" type="force_torque">
    <update_rate>1000</update_rate>
  </sensor>
</gazebo>
<gazebo reference="BL_TO_BASELINK">
  <provideFeedback>true</provideFeedback>
  <sensor name="BL_force_torque" type="force_torque">
    <update_rate>1000</update_rate>
  </sensor>
</gazebo>
<gazebo reference="BR_TO_BASELINK">
  <provideFeedback>true</provideFeedback>
  <sensor name="BR_force_torque" type="force_torque">
    <update_rate>1000</update_rate>
  </sensor>
</gazebo>
<gazebo reference="base_link">
  <gravity>true</gravity>
  <sensor name="imu_sensor" type="imu">
    <always_on>true</always_on>
    <update_rate>1000</update_rate>
    <visualize>true</visualize>
    <topic>imu</topic>
    <plugin filename="libgazebo_ros_imu_sensor.so" name="imu_plugin">
      <topicName>imu</topicName>
      <bodyName>base_link</bodyName>
      <updateRateHZ>1000.0</updateRateHZ>
      <gaussianNoise>0.0</gaussianNoise>
      <xyzOffset>0 0 0</xyzOffset>
      <rpyOffset>0 0 0</rpyOffset>
      <frameName>base_link</frameName>
      <initialOrientationAsReference>false</initialOrientationAsReference>
    </plugin>
    <pose>0 0 0 0 0 0</pose>
  </sensor>
</gazebo>


<gazebo>
   <plugin filename="libgazebo_ros_control.so" name="gazebo_ros_control"></plugin>
   <plugin name="p3d_base_controller" filename="libgazebo_ros_p3d.so">
    <alwaysOn>true</alwaysOn>
    <updateRate>1000.0</updateRate>
    <updateRateHZ>1000.0</updateRateHZ>
    <bodyName>base_link</bodyName>
    <topicName>odom</topicName>
    <gaussianNoise>0</gaussianNoise>
    <frameName>world</frameName>
    <xyzOffsets>0 0 0</xyzOffsets>
    <rpyOffsets>0 0 0</rpyOffsets>
  </plugin>  

  <!-- Force torque sensors -->
  <plugin name="FL_TO_BASELINK_ft_sensor" filename="libgazebo_ros_ft_sensor.so">
    <updateRate>1000.0</updateRate>
    <topicName>front_left_torque</topicName>
    <jointName>FL_TO_BASELINK</jointName>
  </plugin>
  <plugin name="FR_TO_BASELINK_ft_sensor" filename="libgazebo_ros_ft_sensor.so">
    <updateRate>1000.0</updateRate>
    <topicName>front_right_torque</topicName>
    <jointName>FR_TO_BASELINK</jointName>
  </plugin>
  <plugin name="BL_TO_BASELINK_ft_sensor" filename="libgazebo_ros_ft_sensor.so">
    <updateRate>1000.0</updateRate>
    <topicName>back_left_torque</topicName>
    <jointName>BL_TO_BASELINK</jointName>
  </plugin>
  <plugin name="BR_TO_BASELINK_ft_sensor" filename="libgazebo_ros_ft_sensor.so">
    <updateRate>1000.0</updateRate>
    <topicName>back_right_torque</topicName>
    <jointName>BR_TO_BASELINK</jointName>
  </plugin>
</gazebo>


  <transmission name="FR_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <actuator name="motor1">
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
    <joint name="FR_TO_BASELINK">
      <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
    </joint>
  </transmission>

  <transmission name="FL_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <actuator name="motor2">
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
    <joint name="FL_TO_BASELINK">
      <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
    </joint>
  </transmission>

  <transmission name="BR_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <actuator name="motor3">
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
    <joint name="BR_TO_BASELINK">
      <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
    </joint>
  </transmission>

  <transmission name="BL_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <actuator name="motor4">
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
    <joint name="BL_TO_BASELINK">
      <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
    </joint>
  </transmission>

</robot>
